<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">

    <title>laundrybot</title>
</head>

<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <h1 class="navbar-brand mb-0" href="#">laundrybot</h1>
        </div>
    </nav>
    <div class="container">
        {{range .machines}}
        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">
                    {{.Name}} &nbsp;<span class="badge bg-{{index $.stateColors .CurrentState}}">{{.GetFriendlyState}}</span>

                    <small>
                        {{if or (eq .GetFriendlyState "Running") (eq .GetFriendlyState "Awaiting Collection") }}
                            <span style="float: right;">In use for {{.MinutesSinceStart}} minutes</span>
                        {{end}}
                    </small>
                </h5>
                {{if ne .GetFriendlyState "Ready"}}
                    {{if .User}} 
                        Machine is currently in use by <b>{{.User.Name}}</b>.
                    {{else}}
                        Machine is currently in use, but has not been claimed.
                    {{end}}
                    <br>
                {{end}}
                {{if and (eq .GetFriendlyState "Running") (not .User)}}
                    To claim this machine, send the command <code>/claim {{.Name}}</code> to <a href="https://t.me/FrankReynoldsBot">TrashBot</a>.
                {{else if eq .GetFriendlyState "Awaiting Collection"}}
                    To mark this load as collected, send the command <code>/collect {{.Name}}</code> to <a href="https://t.me/FrankReynoldsBot">TrashBot</a>.
                {{end}}
            </div>
        </div>
        {{end}}
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
